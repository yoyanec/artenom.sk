<header class="bg-dark py-5">
	<div class="container px-4 px-lg-5 my-5">
		<div class="text-center text-white">
			<h1 class="display-4 fw-bolder">Ukážka prác Artenom s.r.o.</h1>
			<p class="lead fw-normal text-white-50 mb-0">Táto stránka slúži ako referencia pre záujemcov o spoluprácu so spoločnosťou Artenom s.r.o.. Ide o subjektínvne hodnotenie na základe našej skúsenosti</p>
		</div>
	</div>
</header>

 <section class="py-5">
	<div class="container px-4 px-lg-5 mt-5">

		{{#if album.albums}} 
		<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
			{{#each album.albums~}}
			<div class="col mb-5">
				<div class="card h-100">
					<img class="card-img-top" src="{{relative previews.0.urls.small}}" />
					<div class="card-body p-4">
						<div class="text-center">
							<h5 class="fw-bolder">{{title}}</h5>
						</div>
						<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
							<div class="text-center">
								<a class="btn btn-outline-dark mt-auto" href="{{relative url}}">Pozrieť fotografie</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			{{~/each}}
		</div>
		{{/if}}

		{{#if album.files}} 
		<div class="row row-cols-12 justify-content-center">
			<ul id="media" class="clearfix">
				{{#each album.files~}}
						{{> thumbnail}}
				{{~/each}}
			</ul>
		</div>
		{{/if}}

	</div>
</section>
